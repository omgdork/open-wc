{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
  },
  "include": [
    "packages/testing-helpers",
  ],
  "exclude": [
    "**/karma.conf.js",
    "**/*.config.js",
    "**/wallaby.js",
    "node_modules",
    "**/node_modules/*",
    "**/coverage/*",
    "packages/create/src/generators/*/templates/**/*",
    "**/dist/*"
  ]
}
